{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2019",
		"moduleResolution": "node",
		"sourceMap": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"types/*"
			]
		}
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"watch": true
}
